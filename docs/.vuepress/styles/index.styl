.home .hero img
  max-width 450px!important

.custom-block
  border-radius 6px
  box-shadow 0 2px 7px rgba(0,0,0,.2)

.campagna-scuola-class .feature
  box-shadow 0 2px 7px rgba(0,0,0,.2)

.theme-container.custom-page-class-scuola 
  span.next a , p > a
  {
    display: inline-block;
    font-size: 1.2rem;
    color: #fff;
    background-color: $accentColor;
    padding: 0.8rem 1.6rem;
    border-radius: 4px;
    transition: background-color 0.1s ease;
    box-sizing: border-box;
    border-bottom: 1px solid darken($accentColor, 10%);
    margin: 6px;

    &:hover {
      background-color: lighten($accentColor, 10%);
    }
  }

html .campagna-scuola-class 
  background url(/20190063.jpg) no-repeat center center fixed; 
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;

.campagna-scuola-class main
  border-radius 50px
  background-color  rgba(255,255,255,.6)
  box-shadow 0 2px 7px rgba(0,0,0,.5)

.campagna-scuola-class-1 
  background url(/20472709.jpg) no-repeat top right fixed; 

.campagna-scuola-class-2 
  background url(/17792152.jpg) no-repeat top left fixed; 

@media (min-width: ($MQMobile + 1px))
  .theme-default-content:not(.custom) img
    margin-left: auto
    margin-right: auto
